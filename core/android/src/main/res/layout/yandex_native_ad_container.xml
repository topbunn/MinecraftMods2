<com.yandex.mobile.ads.nativeads.NativeAdView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/native_ad_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded"
    android:backgroundTint="#2A2A2A"
    android:minHeight="300dp"
    android:padding="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/yandex_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/semibold"
            tool:text="Title"
            android:textColor="#fff"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/yandex_price"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/yandex_media" />

        <TextView
            android:id="@+id/yandex_domain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            tool:text="example.com"
            android:textColor="#DFDFDF"
            android:layout_margin="4dp"
            android:textSize="12sp"
            android:translationZ="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/yandex_icon" />

        <TextView
            android:id="@+id/yandex_warning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/medium"
            android:textColor="#DFDFDF"
            android:textSize="15sp"
            tool:text="Ad warning"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/yandex_body"
            app:layout_constraintTop_toBottomOf="@+id/yandex_body" />

        <TextView
            android:id="@+id/yandex_sponsored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tool:text="Sponsored"
            android:layout_margin="4dp"
            android:translationZ="2dp"
            android:fontFamily="@font/bold"
            android:textColor="#fff"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/yandex_media"
            app:layout_constraintTop_toTopOf="@+id/yandex_media" />

        <ImageView
            android:id="@+id/yandex_feedback"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="12dp"
            android:contentDescription="Feedback"
            android:src="@drawable/ic_feedback"
            app:layout_constraintEnd_toEndOf="@+id/yandex_media"
            app:layout_constraintTop_toBottomOf="@+id/yandex_media" />

        <TextView
            android:id="@+id/yandex_call_to_action"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            tool:text="Install"
            android:layout_marginTop="10.dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"
            android:fontFamily="@font/semibold"
            android:background="@drawable/bg_button"
            android:textColor="#fff"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/yandex_warning" />

        <com.yandex.mobile.ads.nativeads.MediaView
            android:id="@+id/yandex_media"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:maxHeight="100dp"
            app:layout_constraintDimensionRatio="5:3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/yandex_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            app:layout_constraintStart_toStartOf="@+id/yandex_media"
            app:layout_constraintTop_toTopOf="@+id/yandex_media" />

        <TextView
            android:id="@+id/yandex_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            tool:text="$4.99"
            android:fontFamily="@font/bold"
            android:textColor="#fff"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/yandex_title"
            app:layout_constraintEnd_toStartOf="@+id/yandex_feedback"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/yandex_title"
            app:layout_constraintTop_toTopOf="@+id/yandex_title" />

        <TextView
            android:id="@+id/yandex_body"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            tool:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do lkg rgdfgk fdgjdf qweriwo svlksdf eiusod tempor incididunt ut..."
            android:fontFamily="@font/medium"
            android:textColor="#DFDFDF"
            android:textSize="14sp"
            android:maxLines="4"
            app:layout_constraintEnd_toEndOf="@+id/yandex_feedback"
            app:layout_constraintStart_toStartOf="@+id/yandex_title"
            app:layout_constraintTop_toBottomOf="@+id/yandex_title" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.yandex.mobile.ads.nativeads.NativeAdView>
